@model Udemy.Models.Topic

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Upload Topic";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UploadTopic" method="post">
    <div class="form-group">
        <label for="language">Language</label>
        <select asp-for="Language" class="form-control">
            <option value="">Select Language</option>
            <option value="C#">C#</option>
            <option value="SQL">SQL</option>
            <option value="ASP.NET">ASP.NET</option>
        </select>
    </div>
    <div class="form-group">
        <label for="topicName">Topic Name</label>
        <input asp-for="TopicName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="videoUrl">Video URL</label>
        <input asp-for="VideoUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
