@model Udemy.Models.LoginViewModel
@{
    Layout = "_LoginLayout"; // Use the new layout
    ViewData["Title"] = "Login";
}

<style>
    /* Custom CSS for smaller icon size */
    .btn img {
        max-width: 20px; /* Adjust the size as needed */
        max-height: 20px; /* Adjust the size as needed */
        margin-right: 5px; /* Optional: Adjust the spacing between icon and text */
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <!-- Left side: Image -->
        <div class="col-md-6">
            <img src="~/images/Screenshot 2024-07-02 220442.png" alt="Screenshot" class="img-fluid">
        </div>

        <!-- Right side: Login form -->
        <div class="col-md-6">
            <h2>Log in to your Udemy account</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
            <a href="#">Forgot Password</a>
            <hr>
            <p>Other log in options</p>
            <button class="btn btn-light"><img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Log In"> Google</button>
            <button class="btn btn-light"><img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg" alt="Facebook Log In"> Facebook</button>
            <button class="btn btn-light"><img src="https://upload.wikimedia.org/wikipedia/commons/f/fa/Apple_logo_black.svg" alt="Apple Log In"> Apple</button>
            <p>Don't have an account? <a asp-controller="Account" asp-action="SignUp">Sign up</a></p>
            <p>Log in with your organization</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
