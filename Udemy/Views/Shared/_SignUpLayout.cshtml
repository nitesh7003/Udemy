<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Udemy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/certificate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Trendingnow.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Review.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lastone.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Toptrends.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aftercertificate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Udemy.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Custom CSS for black background Sign up button */
        .navbar-nav .btn-primary {
            background-color: black !important;
            border-color: black !important;
        }

            .navbar-nav .btn-primary:hover {
                background-color: #333 !important; /* Darken on hover */
                border-color: #333 !important;
            }

            .navbar-nav .btn-primary:focus,
            .navbar-nav .btn-primary.focus {
                box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.5) !important;
            }

        /* Custom CSS for dropdown items */
        .dropdown-item {
            color: black;
        }

            .dropdown-item:hover {
                color: white;
                background-color: #333;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Udemy_logo.svg.png" width="50" height="30" class="d-inline-block align-top" alt="Udemy Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Categories
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Account" asp-action="CSharp">C#</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="sql">SQL</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="asp">ASP.NET</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search for anything" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="SubscriptionPlans">Plans & Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Udemy Business</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.udemy.com/teaching/?ref=teach_header">Teach on Udemy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white" asp-controller="Account" asp-action="Login">Log in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white" asp-controller="Account" asp-action="SignUp">Sign up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-lg-start">
        <div class="text-center p-3">
            © @DateTime.Now.Year - Udemy
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
